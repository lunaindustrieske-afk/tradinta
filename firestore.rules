rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match all documents in all collections
    match /{document=**} {
      
      // Allow read to everyone (authenticated or not)
      allow read: if true;
      
      // Allow write (create, update, delete) only if user is authenticated
      allow write: if request.auth != null;
    }
  }
}
